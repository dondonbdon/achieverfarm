<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:fragmentActivity=".SignUpActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/signUpFullNameEdit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:autofillHints="name"
            android:background="@drawable/rect_10dp"
            android:backgroundTint="@color/grey5"
            android:hint="@string/full_name"
            android:inputType="textPersonName"
            android:paddingHorizontal="15dp" />

        <EditText
            android:id="@+id/signUpEmailEdit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:autofillHints="emailAddress"
            android:background="@drawable/rect_10dp"
            android:backgroundTint="@color/grey5"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="15dp" />

        <EditText
            android:id="@+id/signUpPhoneNumberEdit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:autofillHints="phone"
            android:background="@drawable/rect_10dp"
            android:backgroundTint="@color/grey5"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:paddingHorizontal="15dp" />

        <EditText
            android:id="@+id/signUpPasswordEdit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:autofillHints="password"
            android:background="@drawable/rect_10dp"
            android:backgroundTint="@color/grey5"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingHorizontal="15dp" />

        <EditText
            android:id="@+id/signUpConPasswordEdit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:autofillHints="password"
            android:background="@drawable/rect_10dp"
            android:backgroundTint="@color/grey5"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:paddingHorizontal="15dp" />

        <TextView
            android:id="@+id/signUpBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/rect_10dp"
            android:backgroundTint="@color/m1"
            android:gravity="center"
            android:text="@string/sign_up"
            android:textColor="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>