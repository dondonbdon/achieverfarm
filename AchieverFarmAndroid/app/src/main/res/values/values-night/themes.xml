<resources>
    <style name="Theme.AchieverFarm" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorPrimary">@color/m1</item>
        <item name="colorPrimaryVariant">@color/m2</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/m2</item>
        <item name="colorSecondaryVariant">@color/m3</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorTertiary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="android:textColorTertiaryInverse">@color/white</item>
        <item name="android:statusBarColor">@color/m2</item>
        <item name="android:navigationBarColor">@color/grey10</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:backgroundTint">@color/grey5</item>
    </style>

    <style name="Theme.SplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/m1</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_achiever_farm_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.AchieverFarm</item>
    </style>
</resources>